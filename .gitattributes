# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Binary files to track with Git LFS
*.exe filter=lfs diff=lfs merge=lfs -text
*.dll filter=lfs diff=lfs merge=lfs -text
*.so filter=lfs diff=lfs merge=lfs -text
*.dylib filter=lfs diff=lfs merge=lfs -text
*.node filter=lfs diff=lfs merge=lfs -text

# Large image files
*.bmp filter=lfs diff=lfs merge=lfs -text
*.xpm filter=lfs diff=lfs merge=lfs -text
*.icns filter=lfs diff=lfs merge=lfs -text
*.ico filter=lfs diff=lfs merge=lfs -text

# Large PNG files (over 500KB)
*.png filter=lfs diff=lfs merge=lfs -text

# Archives
*.zip filter=lfs diff=lfs merge=lfs -text
*.tar.gz filter=lfs diff=lfs merge=lfs -text
*.tgz filter=lfs diff=lfs merge=lfs -text

# Large data files
*.perf.data.txt filter=lfs diff=lfs merge=lfs -text

# Large source map files
*.map filter=lfs diff=lfs merge=lfs -text

# Large JSON files (test fixtures, etc.)
**/test/**/*.json filter=lfs diff=lfs merge=lfs -text
**/colorize-results/**/*.json filter=lfs diff=lfs merge=lfs -text

# Large TypeScript files (generated test files)
**/test-checker.ts filter=lfs diff=lfs merge=lfs -text

# Windows installer files
*.msi filter=lfs diff=lfs merge=lfs -text
*.appx filter=lfs diff=lfs merge=lfs -text

# macOS installer files
*.dmg filter=lfs diff=lfs merge=lfs -text
*.pkg filter=lfs diff=lfs merge=lfs -text

# Linux packages
*.deb filter=lfs diff=lfs merge=lfs -text
*.rpm filter=lfs diff=lfs merge=lfs -text
*.AppImage filter=lfs diff=lfs merge=lfs -text

# Font files
*.ttf filter=lfs diff=lfs merge=lfs -text
*.otf filter=lfs diff=lfs merge=lfs -text
*.woff filter=lfs diff=lfs merge=lfs -text
*.woff2 filter=lfs diff=lfs merge=lfs -text

# Video/Audio files
*.mp4 filter=lfs diff=lfs merge=lfs -text
*.mov filter=lfs diff=lfs merge=lfs -text
*.avi filter=lfs diff=lfs merge=lfs -text
*.mp3 filter=lfs diff=lfs merge=lfs -text
*.wav filter=lfs diff=lfs merge=lfs -text

# Large text files (over 1MB)
*.txt filter=lfs diff=lfs merge=lfs -text linguist-generated=true

# Explicitly track large files that are already in the repo
src/vs/base/test/node/uri.perf.data.txt filter=lfs diff=lfs merge=lfs -text
extensions/vscode-colorize-perf-tests/test/colorize-fixtures/test-checker.ts filter=lfs diff=lfs merge=lfs -text
resources/win32/inno-big-250.bmp filter=lfs diff=lfs merge=lfs -text
resources/linux/rpm/code.xpm filter=lfs diff=lfs merge=lfs -text


